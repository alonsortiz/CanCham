<plugin xmlns="http://cordova.apache.org/ns/plugins/1.0"
    id="cordova-plugin-google-sign-in-ios"
    version="2.1.0">
  <engines>
    <engine name="cordova" version=">=3.0.0" />
  </engines>

  <name>Google Sign-in for iOS Framework Plugin</name>
  <keywords>google,sing-in,iOS,framework</keywords>
  <repo>https://github.com/MobileChromeApps/cordova-plugin-google-sign-in-ios</repo>
  <issue>https://github.com/MobileChromeApps/cordova-plugin-google-sign-in-ios/issues</issue>

  <platform name="ios">
    <dependency id="cordova-plugin-google-open-source-ios@1.7" />
    <framework src="GoogleSignIn.framework" custom="true" />
    <framework src="GoogleSignIn.bundle" custom="true" />
    <framework src="AddressBook.framework" />
    <framework src="CoreText.framework" />
    <framework src="StoreKit.framework" />
    <framework src="SystemConfiguration.framework" />
  </platform>
</plugin>
